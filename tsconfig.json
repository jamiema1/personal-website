{
	// "extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"jsx": "react-jsx"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"test/**/*.ts",
		"test/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}